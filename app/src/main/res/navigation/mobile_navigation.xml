<?xml version="1.0" encoding="utf-8"?>
<!-- The Navigator connects to all fragments -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mobile_navigation"
            app:startDestination="@id/currentWeatherFragment">

    <fragment android:id="@+id/currentWeatherFragment"
              android:name="com.hva.weather.ui.weather.current.CurrentWeatherFragment"
              android:label="Today" tools:layout="@layout/current_weather_fragment"/>
    <fragment android:id="@+id/futureDetailWeatherFragment"
              android:name="com.hva.weather.ui.weather.future.detail.FutureDetailWeatherFragment"
              android:label="future_detail_weather_fragment" tools:layout="@layout/future_detail_weather_fragment"/>
    <fragment android:id="@+id/futureListWeatherFragment"
              android:name="com.hva.weather.ui.weather.future.list.FutureListWeatherFragment"
              android:label="future_list_weather_fragment" tools:layout="@layout/future_list_weather_fragment"/>
    <fragment android:id="@+id/settingsFragment" android:name="com.hva.weather.ui.settings.SettingsFragment"
              android:label="Settings"/>
    <fragment android:id="@+id/currentWeatherMapFragment"
              android:name="com.hva.weather.ui.weather.map.CurrentWeatherMapFragment"
              android:label="current_weather_map_fragment" tools:layout="@layout/current_weather_map_fragment"/>
</navigation>